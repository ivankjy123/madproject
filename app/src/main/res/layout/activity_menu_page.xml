        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Button 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/btnBoarding"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="btnBoarding"
                    android:background="@drawable/borderloginopt"
                    android:foreground="@drawable/baseline_house_siding_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Boarding"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="16sp"
                    android:textColor="#000" />
            </LinearLayout>

            <!-- Button 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="btnDayCare"
                    android:background="@drawable/borderloginopt"
                    android:foreground="@drawable/baseline_add_circle_outline_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Day Care"
                    android:textSize="16sp"
                    android:textColor="#000" />
            </LinearLayout>

            <!-- Button 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/btnpetgal"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="btnpetgal"
                    android:background="@drawable/borderloginopt"
                    android:foreground="@drawable/baseline_pets_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Pet Gal."
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="16sp"
                    android:textColor="#000" />
            </LinearLayout>

            <!-- Button 4 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/borderloginopt"
                    android:foreground="@drawable/baseline_build_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="TBC.."
                    android:textSize="16sp"
                    android:textColor="#000" />
            </LinearLayout>

        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="80dp"
            android:clickable="true"
            app:srcCompat="@drawable/baseline_live_help_24" />


    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
