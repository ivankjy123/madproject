<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Pet Register :"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/et_pet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:drawableTint="#d0d0d0"
            android:ems="10"
            android:hint="Pet Name"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_pet_age"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:minHeight="48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Pet Age"
            android:drawableTint="#d0d0d0"
            android:layout_gravity="center_horizontal"
            android:inputType="number"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_pet_breed"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:minHeight="48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:ems="10"
            android:drawableTint="#d0d0d0"
            android:inputType="text"
            android:layout_gravity="center_horizontal"
            android:hint="Breed"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_owner_name"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:minHeight="48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:ems="10"
            android:drawableTint="#d0d0d0"
            android:inputType="text"
            android:layout_gravity="center_horizontal"
            android:hint="Owner Name"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_owner_contact"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:minHeight="48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:ems="10"
            android:drawableTint="#d0d0d0"
            android:layout_gravity="center_horizontal"
            android:hint="Owner Contact"
            android:inputType="phone"
            android:padding="10dp" />

        <Button
            android:id="@+id/btn_register_pet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/border"
            android:width="300dp"
            android:onClick="btnLogin"
            android:layout_gravity="center_horizontal"
            android:text="Register Pet" />
    </LinearLayout>
</ScrollView>
