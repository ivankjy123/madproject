<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modify Pet Details :"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/et_search_pet"
            android:layout_width="match_parent"
            android:minHeight="48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:ems="10"
            android:drawableStart="@drawable/baseline_search_24"
            android:inputType="text"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:hint="Search Pet by Name or ID" />

        <Button
            android:id="@+id/btn_fetch_pet"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:onClick="btnLogin"
            android:layout_gravity="center_horizontal"
            android:text="Search" />

        <EditText
            android:id="@+id/et_pet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/border"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp"
            android:hint="Pet Name" />

        <EditText
            android:id="@+id/et_pet_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:ems="10"
            android:minHeight="48dp"
            android:padding="10dp"
            android:hint="Pet Age"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_pet_breed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp"
            android:hint="Breed" />

        <EditText
            android:id="@+id/et_owner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp"
            android:hint="Owner Name" />

        <EditText
            android:id="@+id/et_owner_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:ems="10"
            android:minHeight="48dp"
            android:padding="10dp"
            android:hint="Owner Contact"
            android:inputType="phone" />

        <Button
            android:id="@+id/btn_modify_pet"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:width="300dp"
            android:onClick="btnLogin"
            android:layout_gravity="center_horizontal"
            android:text="Modify Pet Details" />
    </LinearLayout>
</ScrollView>